@{
    ViewBag.Title = "Login - Monster University";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <!-- SweetAlert2 -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- SweetAlert2 JS -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>
    <!-- CAMBIO AQUÍ: "ControladorUsuario" en lugar de "Views" -->
    @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { id = "loginForm" }))
    {
        @Html.AntiForgeryToken()

        <div class="login-container">
            <div class="background-overlay"></div>

            <div class="login-card">
                <div class="login-header">
                    <h1>MONSTER UNIVERSITY</h1>
                    <h2>Iniciar Sesión</h2>
                </div>

                @if (!string.IsNullOrEmpty(ViewBag.Error))
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="fas fa-exclamation-circle me-2"></i>@ViewBag.Error
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <div class="form-group mb-3">
                    <label for="XEUSU_NOMBRE" class="form-label">
                        <i class="fas fa-user me-2"></i>Usuario:
                    </label>
                    <!-- CAMBIO AQUÍ: name="XEUSU_NOMBRE" -->
                    <input type="text" id="XEUSU_NOMBRE" name="XEUSU_NOMBRE"
                           class="form-control form-control-lg"
                           placeholder="Ingrese su usuario"
                           required
                           autocomplete="username"
                           value="@ViewBag.Username">
                </div>

                <div class="form-group mb-4">
                    <label for="XEUSU_CONTRA" class="form-label">
                        <i class="fas fa-lock me-2"></i>Contraseña:
                    </label>
                    <div class="input-group">
                        <!-- CAMBIO AQUÍ: name="XEUSU_CONTRA" -->
                        <input type="password" id="XEUSU_CONTRA" name="XEUSU_CONTRA"
                               class="form-control form-control-lg"
                               placeholder="Ingrese su contraseña"
                               required
                               autocomplete="current-password">
                        <button class="btn btn-outline-secondary" type="button" id="btnTogglePassword">
                            <i class="fas fa-eye"></i>
                        </button>
                    </div>
                </div>

                <button type="submit" class="btn login-button w-100" id="btnIngresar">
                    <i class="fas fa-sign-in-alt me-2"></i>Ingresar al Sistema
                </button>

                <div class="login-footer mt-4 pt-3">
                    <p class="mb-0">Sistema de Gestión Académica</p>
                    <small class="text-muted">© Monster University</small>
                </div>
            </div>
        </div>
    }

    <script>
        $(document).ready(function () {
            // Toggle password visibility
            $('#btnTogglePassword').click(function () {
                // CAMBIO AQUÍ: '#XEUSU_CONTRA' en lugar de '#password'
                var passwordField = $('#XEUSU_CONTRA');
                var type = passwordField.attr('type');
                var icon = $(this).find('i');

                if (type === 'password') {
                    passwordField.attr('type', 'text');
                    icon.removeClass('fa-eye').addClass('fa-eye-slash');
                } else {
                    passwordField.attr('type', 'password');
                    icon.removeClass('fa-eye-slash').addClass('fa-eye');
                }
            });

            // Validación del formulario
            $('#loginForm').submit(function (e) {
                // CAMBIO AQUÍ: Usa los nuevos IDs
                var username = $('#XEUSU_NOMBRE').val().trim();
                var password = $('#XEUSU_CONTRA').val().trim();
                var isValid = true;

                if (username === '') {
                    Swal.fire({
                        icon: 'warning',
                        title: 'Usuario requerido',
                        text: 'Por favor ingrese su usuario',
                        confirmButtonColor: '#4f46e5'
                    });
                    // CAMBIO AQUÍ: '#XEUSU_NOMBRE'
                    $('#XEUSU_NOMBRE').focus();
                    isValid = false;
                }
                else if (password === '') {
                    Swal.fire({
                        icon: 'warning',
                        title: 'Contraseña requerida',
                        text: 'Por favor ingrese su contraseña',
                        confirmButtonColor: '#4f46e5'
                    });
                    // CAMBIO AQUÍ: '#XEUSU_CONTRA'
                    $('#XEUSU_CONTRA').focus();
                    isValid = false;
                }

                if (!isValid) {
                    e.preventDefault();
                } else {
                    // Mostrar carga
                    $('#btnIngresar').html('<i class="fas fa-spinner fa-spin me-2"></i>Verificando...');
                    $('#btnIngresar').prop('disabled', true);
                }
            });

            // Auto-focus en el campo de usuario
            // CAMBIO AQUÍ: '#XEUSU_NOMBRE'
            $('#XEUSU_NOMBRE').focus();

            // Permitir login con Enter
            // CAMBIO AQUÍ: '#XEUSU_NOMBRE, #XEUSU_CONTRA'
            $('#XEUSU_NOMBRE, #XEUSU_CONTRA').keypress(function (e) {
                if (e.which === 13) {
                    $('#loginForm').submit();
                }
            });

            // Auto-hide alerts after 5 seconds
            setTimeout(function () {
                $('.alert').alert('close');
            }, 5000);
        });
    </script>

    <style>
        /* Mantén todos los estilos CSS que ya tenías */
        :root {
            --primary-purple: #6d28d9;
            --primary-indigo: #4f46e5;
            --accent-amber: #f59e0b;
            --light-bg: rgba(255, 255, 255, 0.95);
            --dark-overlay: rgba(79, 70, 229, 0.7);
        }

        body {
            margin: 0;
            padding: 0;
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .login-container {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            padding: 20px;
            background-image: url('https://www.usnews.com/dims4/USNEWS/79eb9d6/2147483647/thumbnail/970x647/quality/85/?url=https%3A%2F%2Fwww.usnews.com%2Fcmsmedia%2F9b%2F5a%2Fc2f5a4f84960a66aa9276432b51b%2Fgettyimages-1478520911.jpg');
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            background-repeat: no-repeat;
            position: relative;
        }

        .background-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient( 135deg, rgba(109, 40, 217, 0.8) 0%, rgba(79, 70, 229, 0.7) 50%, rgba(245, 158, 11, 0.2) 100% );
            z-index: 0;
        }

        .login-card {
            background: var(--light-bg);
            padding: 40px 35px;
            border-radius: 15px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.4);
            width: 100%;
            max-width: 420px;
            position: relative;
            z-index: 1;
            border: 1px solid rgba(255, 255, 255, 0.2);
            backdrop-filter: blur(10px);
        }

        .login-header {
            text-align: center;
            margin-bottom: 30px;
        }

            .login-header h1 {
                color: var(--primary-purple);
                margin: 0 0 10px 0;
                font-size: 2.2rem;
                font-weight: 800;
                text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.1);
                letter-spacing: 1px;
            }

            .login-header h2 {
                color: var(--primary-indigo);
                margin: 0;
                font-size: 1.5rem;
                font-weight: 600;
                opacity: 0.9;
            }

        .form-group label {
            display: block;
            margin-bottom: 8px;
            color: var(--primary-purple);
            font-weight: 600;
            font-size: 0.95rem;
        }

        .form-control {
            width: 100%;
            padding: 12px 15px;
            border: 2px solid #e2e8f0;
            border-radius: 8px;
            font-size: 1rem;
            transition: all 0.3s ease;
            background: white;
        }

            .form-control:focus {
                outline: none;
                border-color: var(--primary-indigo);
                box-shadow: 0 0 0 3px rgba(79, 70, 229, 0.2);
            }

            .form-control::placeholder {
                color: #94a3b8;
                opacity: 0.8;
            }

        .login-button {
            padding: 14px;
            background: linear-gradient(135deg, var(--primary-purple) 0%, var(--primary-indigo) 100%);
            border: none;
            border-radius: 8px;
            color: white;
            font-size: 1.1rem;
            font-weight: 700;
            cursor: pointer;
            transition: all 0.3s ease;
            margin-top: 10px;
            box-shadow: 0 4px 15px rgba(109, 40, 217, 0.3);
        }

            .login-button:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 20px rgba(109, 40, 217, 0.4);
                background: linear-gradient(135deg, var(--primary-indigo) 0%, var(--primary-purple) 100%);
            }

            .login-button:disabled {
                opacity: 0.7;
                cursor: not-allowed;
            }

        .login-footer {
            text-align: center;
            border-top: 1px solid #e2e8f0;
        }
    </style>
</body>
</html>