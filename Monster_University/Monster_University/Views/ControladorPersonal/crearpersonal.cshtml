@model CapaModelo.Personal

@{
    ViewBag.Title = "Crear Personal";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Contenedor principal con imagen de fondo y overlay -->
<div class="main-background">
    <div class="background-overlay"></div>
    <div class="dashboard-container">
        <!-- Tarjeta de Crear Personal -->
        <div class="card" style="margin-bottom: 20px; background: rgba(255,255,255,0.95);">
            <div class="card-header" style="background: linear-gradient(135deg, #2a64c5 0%, #4a90e2 100%); color: white; border-radius: 10px 10px 0 0;">
                <h3 class="mb-0">
                    <i class="fas fa-user-plus me-2"></i>Crear Nueva Persona
                </h3>
                <p class="mb-0 mt-1" style="opacity: 0.9; font-size: 0.9rem;">
                    Complete los datos para registrar una nueva persona en el sistema
                </p>
            </div>
            <div class="card-body">
                @if (!string.IsNullOrEmpty(ViewBag.Error))
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="fas fa-exclamation-circle me-2"></i>@ViewBag.Error
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                @using (Html.BeginForm("crearpersonal", "ControladorPersonal", FormMethod.Post, new { id = "formCrearPersona", @class = "needs-validation", @novalidate = "novalidate" }))
                {
                    @Html.AntiForgeryToken()

                    <!-- SECCIÓN 1: Información Básica -->
                    <div class="card mb-4">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">
                                <i class="fas fa-id-card me-2"></i>Información Básica
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <!-- Código Persona (Generado automáticamente) -->
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">
                                            <i class="fas fa-key me-1"></i>Código Persona: <span class="text-danger">*</span>
                                        </label>
                                        <div class="input-group">
                                            @Html.TextBoxFor(m => m.codigo, new
                                            {
                                                @class = "form-control bg-light",
                                                @readonly = "readonly",
                                                placeholder = "Se genera automáticamente"
                                            })
                                            <span class="input-group-text">
                                                <i class="fas fa-key"></i>
                                            </span>
                                        </div>
                                        <small class="text-muted">(Generado automáticamente: PE001, PE002, etc.)</small>
                                    </div>
                                </div>

                                <!-- Fecha de Ingreso -->
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">
                                            <i class="fas fa-calendar-alt me-1"></i>Fecha de Ingreso: <span class="text-danger">*</span>
                                        </label>
                                        @Html.TextBoxFor(m => m.fecha_ingreso, "{0:yyyy-MM-dd}", new
                                        {
                                            @class = "form-control",
                                            type = "date",
                                            required = "required",
                                            placeholder = "Seleccione fecha"
                                        })
                                        <small class="text-muted">(Fecha en que ingresó a la institución)</small>
                                    </div>
                                </div>
                            </div>

                            <!-- Nombre y Apellido -->
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">
                                            <i class="fas fa-user me-1"></i>Nombres: <span class="text-danger">*</span>
                                        </label>
                                        @Html.TextBoxFor(m => m.nombres, new
                                        {
                                            @class = "form-control",
                                            placeholder = "Ingrese los nombres",
                                            maxlength = "50",
                                            required = "required"
                                        })
                                        <small class="text-muted">(Máximo 50 caracteres)</small>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">
                                            <i class="fas fa-user me-1"></i>Apellidos: <span class="text-danger">*</span>
                                        </label>
                                        @Html.TextBoxFor(m => m.apellidos, new
                                        {
                                            @class = "form-control",
                                            placeholder = "Ingrese los apellidos",
                                            maxlength = "50",
                                            required = "required"
                                        })
                                        <small class="text-muted">(Máximo 50 caracteres)</small>
                                    </div>
                                </div>
                            </div>

                            <!-- Documento y Fecha de Nacimiento -->
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">
                                            <i class="fas fa-address-card me-1"></i>Documento: <span class="text-danger">*</span>
                                        </label>
                                        @Html.TextBoxFor(m => m.documento, new
                                        {
                                            @class = "form-control",
                                            placeholder = "Ej: 1725916645",
                                            maxlength = "15",
                                            required = "required"
                                        })
                                        <small class="text-muted">(Máximo 15 caracteres)</small>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">
                                            <i class="fas fa-birthday-cake me-1"></i>Fecha de Nacimiento:
                                        </label>
                                        @Html.TextBoxFor(m => m.fecha_nacimiento, "{0:yyyy-MM-dd}", new
                                        {
                                            @class = "form-control",
                                            type = "date",
                                            placeholder = "Seleccione fecha"
                                        })
                                        <small class="text-muted">(Opcional)</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Contenedor de pestañas -->
                    <div class="tab-container mb-4">
                        <!-- Botones de pestañas -->
                        <div class="tab-buttons">
                            <button type="button" class="tab-button active" onclick="showTab('datosPersonales')">
                                <i class="fas fa-user-circle me-2"></i>📋 Datos Personales
                            </button>
                            <button type="button" class="tab-button" onclick="showTab('contactos')">
                                <i class="fas fa-envelope me-2"></i>📧 Contactos
                            </button>
                        </div>

                        <!-- Contenido de pestañas -->
                        <div class="tab-content">
                            <!-- Pestaña Datos Personales -->
                            <div id="datosPersonales" class="tab-pane active">
                                <div style="padding: 20px;">
                                    <!-- Tipo de Persona -->
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">
                                            <i class="fas fa-user-tag me-1"></i>Tipo de Persona: <span class="text-danger">*</span>
                                        </label>
                                        <select name="peperTipo" class="form-control" required>
                                            <option value="">Seleccione tipo</option>
                                            <option value="Administrador del Sistema">Administrador del Sistema</option>
                                            <option value="Docente">Docente</option>
                                            <option value="Administrador de matriculas">Administrador de matrículas</option>
                                            <option value="Secretaria Academica">Secretaría Académica</option>
                                            <option value="Estudiante">Estudiante</option>
                                            <option value="Personal Administrativo">Personal Administrativo</option>
                                        </select>
                                    </div>

                                    <!-- Sexo -->
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">
                                            <i class="fas fa-venus-mars me-1"></i>Sexo: <span class="text-danger">*</span>
                                        </label>
                                        <div class="radio-group mt-2">
                                            @if (ViewBag.Sexos != null)
                                            {
                                                foreach (var sexo in ViewBag.Sexos)
                                                {
                                                    <div class="form-check form-check-inline">
                                                        <input class="form-check-input" type="radio"
                                                               name="sexo" id="sexo_@sexo.Value"
                                                               value="@sexo.Value" required>
                                                        <label class="form-check-label" for="sexo_@sexo.Value">
                                                            @sexo.Text
                                                        </label>
                                                    </div>
                                                }
                                            }
                                        </div>
                                    </div>

                                    <!-- Estado Civil -->
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">
                                            <i class="fas fa-heart me-1"></i>Estado Civil:
                                        </label>
                                        <select name="estado_civil" class="form-control" id="estado_civil">
                                            <option value="">Seleccione estado civil (opcional)</option>
                                            @if (ViewBag.EstadosCiviles != null)
                                            {
                                                foreach (var estado in ViewBag.EstadosCiviles)
                                                {
                                                    <option value="@estado.Value">@estado.Text</option>
                                                }
                                            }
                                        </select>
                                    </div>
                                </div>
                            </div>

                            <!-- Pestaña Contactos -->
                            <div id="contactos" class="tab-pane">
                                <div style="padding: 20px;">
                                    <!-- Email -->
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">
                                            <i class="fas fa-at me-1"></i>Email: <span class="text-danger">*</span>
                                        </label>
                                        @Html.TextBoxFor(m => m.email, new
                                        {
                                            @class = "form-control",
                                            type = "email",
                                            placeholder = "Ej: ajtoapanta6@espe.edu.ec",
                                            maxlength = "100",
                                            required = "required"
                                        })
                                        <small class="text-muted">(Formato: nombre@espe.edu.ec)</small>
                                    </div>

                                    <!-- Celular -->
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">
                                            <i class="fas fa-phone me-1"></i>Celular:
                                        </label>
                                        @Html.TextBoxFor(m => m.celular, new
                                        {
                                            @class = "form-control",
                                            placeholder = "Ej: 0992760213 (opcional)",
                                            maxlength = "15"
                                        })
                                        <small class="text-muted">(Opcional, formato: 09XXXXXXXX)</small>
                                    </div>

                                    <!-- Nota informativa -->
                                    <div class="alert alert-info mt-3">
                                        <i class="fas fa-info-circle me-2"></i>
                                        <strong>Información de contacto:</strong>
                                        <ul class="mb-0 mt-2">
                                            <li>El email es requerido para notificaciones del sistema</li>
                                            <li>El celular es opcional pero recomendado para emergencias</li>
                                            <li>Los datos de contacto se pueden actualizar posteriormente</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Campos ocultos para usuario automático -->
                    @Html.HiddenFor(m => m.username)
                    @Html.HiddenFor(m => m.password_hash)
                    @Html.HiddenFor(m => m.rol)
                    @Html.HiddenFor(m => m.estado, new { @Value = "ACTIVO" })

                    <!-- Botones de acción -->
                    <div class="text-center mt-4">
                        <button type="submit" class="btn btn-success me-2" id="btnGuardar">
                            <i class="fas fa-save me-1"></i>Crear Persona
                        </button>
                        <button type="button" class="btn btn-secondary me-2" id="btnLimpiar">
                            <i class="fas fa-redo me-1"></i>Limpiar
                        </button>
                        @Html.ActionLink("Cancelar", "listapersonal", "ControladorPersonal", null,
                            new { @class = "btn btn-outline-secondary", @style = "text-decoration: none;" })
                    </div>
                }
            </div>
        </div>

        <!-- Información de Ayuda -->
        <div class="card" style="background: rgba(255,255,255,0.95);">
            <div class="card-header bg-info text-white">
                <h4 class="mb-0">
                    <i class="fas fa-info-circle me-2"></i>Información Importante
                </h4>
            </div>
            <div class="card-body">
                <div class="accordion" id="accordionInfo">
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="headingOne">
                            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne">
                                <i class="fas fa-id-card me-2"></i>Generación de Usuario Automático
                            </button>
                        </h2>
                        <div id="collapseOne" class="accordion-collapse collapse show" data-bs-parent="#accordionInfo">
                            <div class="accordion-body">
                                <ul>
                                    <li>Al crear una persona, se generará automáticamente un usuario en el sistema</li>
                                    <li>El nombre de usuario será: Primera letra del nombre + Apellido completo</li>
                                    <li>La contraseña inicial será la <strong>cédula</strong> de la persona</li>
                                    <li>El estado del usuario será <strong>ACTIVO</strong> por defecto</li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <div class="accordion-item">
                        <h2 class="accordion-header" id="headingTwo">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo">
                                <i class="fas fa-star me-2"></i>Campos Obligatorios
                            </button>
                        </h2>
                        <div id="collapseTwo" class="accordion-collapse collapse" data-bs-parent="#accordionInfo">
                            <div class="accordion-body">
                                <p><strong>Los campos marcados con * son obligatorios:</strong></p>
                                <ul>
                                    <li><strong>Código Persona:</strong> Generado automáticamente</li>
                                    <li><strong>Tipo de Persona:</strong> Seleccione el rol en la institución</li>
                                    <li><strong>Nombre y Apellido:</strong> Máximo 50 caracteres cada uno</li>
                                    <li><strong>Documento:</strong> Máximo 15 caracteres</li>
                                    <li><strong>Email:</strong> Formato válido de correo electrónico</li>
                                    <li><strong>Fecha de Ingreso:</strong> Fecha en que ingresó a la institución</li>
                                    <li><strong>Sexo:</strong> Seleccione una opción</li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <div class="accordion-item">
                        <h2 class="accordion-header" id="headingThree">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree">
                                <i class="fas fa-database me-2"></i>Información del Sistema
                            </button>
                        </h2>
                        <div id="collapseThree" class="accordion-collapse collapse" data-bs-parent="#accordionInfo">
                            <div class="accordion-body">
                                <p><strong>Base de datos:</strong> monster_university_neatbeans</p>
                                <p><strong>Colección:</strong> personas</p>
                                <p><strong>Servidor MongoDB:</strong> localhost:27017</p>
                                <p><strong>Estado conexión:</strong> <span style="color: #28a745; font-weight: bold;">✓ Activa</span></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Scripts específicos para esta vista -->
@section Scripts {
    <script>
        $(document).ready(function () {
            console.log("=== FORMULARIO CREAR PERSONA CARGADO ===");

            // Generar código automáticamente si está vacío
            if (!$('#codigo').val()) {
                $.ajax({
                    url: '@Url.Action("GenerarCodigoPersonal", "ControladorPersonal")',
                    type: 'GET',
                    success: function(data) {
                        if (data.codigo) {
                            $('#codigo').val(data.codigo);
                        }
                    }
                });
            }

            // Auto-generar username basado en nombre y apellido
            $('#nombres, #apellidos').on('blur', function() {
                generarUsername();
            });

            // Botón limpiar formulario
            $('#btnLimpiar').click(function () {
                if (confirm('¿Está seguro de que desea limpiar el formulario?')) {
                    location.reload();
                }
            });

            // Validación del formulario
            $('#formCrearPersona').submit(function (e) {
                console.log('=== INICIANDO CREACIÓN DE PERSONA ===');

                var isValid = true;

                // Reset errores
                $('.form-control').removeClass('is-invalid');
                $('.invalid-feedback').remove();

                // Validar nombres
                if (!$('#nombres').val().trim()) {
                    $('#nombres').addClass('is-invalid');
                    isValid = false;
                }

                // Validar apellidos
                if (!$('#apellidos').val().trim()) {
                    $('#apellidos').addClass('is-invalid');
                    isValid = false;
                }

                // Validar documento
                var documento = $('#documento').val().trim();
                if (!documento) {
                    $('#documento').addClass('is-invalid');
                    isValid = false;
                }

                // Validar email
                var email = $('#email').val().trim();
                if (!email) {
                    $('#email').addClass('is-invalid');
                    isValid = false;
                } else if (!isValidEmail(email)) {
                    $('#email').addClass('is-invalid');
                    isValid = false;
                }

                // Validar fecha de ingreso
                if (!$('#fecha_ingreso').val()) {
                    $('#fecha_ingreso').addClass('is-invalid');
                    isValid = false;
                }

                // Validar tipo de persona
                if (!$('select[name="peperTipo"]').val()) {
                    $('select[name="peperTipo"]').addClass('is-invalid');
                    isValid = false;
                }

                // Validar sexo
                if (!$('input[name="sexo"]:checked').length) {
                    $('input[name="sexo"]').addClass('is-invalid');
                    isValid = false;
                }

                if (!isValid) {
                    e.preventDefault();
                    Swal.fire({
                        icon: 'warning',
                        title: 'Datos incompletos',
                        text: 'Por favor complete todos los campos obligatorios correctamente',
                        confirmButtonColor: '#2a64c5'
                    });
                } else {
                    // Auto-generar username antes de enviar
                    generarUsername();

                    // Establecer contraseña inicial (documento)
                    $('#password_hash').val(documento);

                    // Mostrar indicador de carga
                    $('#btnGuardar').html('<i class="fas fa-spinner fa-spin me-1"></i>Creando...');
                    $('#btnGuardar').prop('disabled', true);
                    console.log('✅ Formulario válido, enviando...');
                }
            });

            // Auto-hide alerts after 5 seconds
            setTimeout(function () {
                $('.alert').alert('close');
            }, 5000);

            // Enfocar primer campo editable
            $('#nombres').focus();
        });

        // Función para generar username automáticamente
        function generarUsername() {
            var nombres = $('#nombres').val().trim();
            var apellidos = $('#apellidos').val().trim();

            if (nombres && apellidos) {
                // Primera letra del primer nombre + apellido completo (sin espacios)
                var primeraLetra = nombres.charAt(0).toLowerCase();
                var apellidoSinEspacios = apellidos.replace(/\s+/g, '').toLowerCase();
                var username = primeraLetra + apellidoSinEspacios;

                $('#username').val(username);
            }
        }

     
        // Función para mostrar pestañas
        function showTab(tabName) {
            // Ocultar todas las pestañas
            $('.tab-pane').removeClass('active');
            // Mostrar la pestaña seleccionada
            $('#' + tabName).addClass('active');

            // Actualizar botones activos
            $('.tab-button').removeClass('active');
            // Activar el botón correspondiente
            $(event.target).addClass('active');
        }
    </script>

