@{
    ViewBag.Title = "Reporte de Carreras";
}

<div class="container mt-4">
    <h2 class="mb-4">📊 Reporte de Carreras</h2>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">
            <strong>Error:</strong> @ViewBag.Error
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    <!-- Panel de Filtros -->
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">🔍 Filtros de Búsqueda</h5>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("Reporte", "ControladorCarrera", FormMethod.Get, new { @class = "form" }))
            {
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label for="nombre" class="form-label">Nombre:</label>
                        <input type="text"
                               id="nombre"
                               name="nombre"
                               class="form-control"
                               placeholder="Buscar por nombre..."
                               value="@ViewBag.FiltroNombre" />
                    </div>

                    <div class="col-md-3 mb-3">
                        <label for="creditosMin" class="form-label">Créditos Mínimos:</label>
                        <input type="number"
                               id="creditosMin"
                               name="creditosMin"
                               class="form-control"
                               placeholder="Ej: 120"
                               value="@ViewBag.FiltroMin" />
                    </div>

                    <div class="col-md-3 mb-3">
                        <label for="creditosMax" class="form-label">Créditos Máximos:</label>
                        <input type="number"
                               id="creditosMax"
                               name="creditosMax"
                               class="form-control"
                               placeholder="Ej: 180"
                               value="@ViewBag.FiltroMax" />
                    </div>

                    <div class="col-md-2 mb-3 d-flex align-items-end">
                        <button type="submit" class="btn btn-success w-100">
                            <i class="fas fa-search"></i> Buscar
                        </button>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <a href="@Url.Action("GenerarPdf", "ControladorCarrera", new {
                            nombre = ViewBag.FiltroNombre,
                            creditosMin = ViewBag.FiltroMin,
                            creditosMax = ViewBag.FiltroMax
                        })" class="btn btn-danger">
                            <i class="fas fa-file-pdf"></i> Descargar PDF
                        </a>

                        <a href="@Url.Action("Reporte", "ControladorCarrera")" class="btn btn-secondary">
                            <i class="fas fa-eraser"></i> Limpiar Filtros
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Tabla de Resultados -->
    <div class="card">
        <div class="card-header bg-info text-white">
            <h5 class="mb-0">📋 Resultados (@ViewBag.Carreras.Count registros)</h5>
        </div>
        <div class="card-body">
            @if (ViewBag.Carreras != null && ViewBag.Carreras.Count > 0)
            {
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th style="width: 10%;">ID</th>
                                <th style="width: 45%;">Nombre</th>
                                <th style="width: 22.5%;" class="text-center">Créditos Mínimos</th>
                                <th style="width: 22.5%;" class="text-center">Créditos Máximos</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var carrera in ViewBag.Carreras)
                            {
                                <tr>
                                    <td class="text-center">@carrera.MECARR_ID</td>
                                    <td>@carrera.MECARR_NOMBRE</td>
                                    <td class="text-center">@carrera.MECARR_MINCRED</td>
                                    <td class="text-center">@carrera.MECARR_MAXCRED</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-warning text-center">
                    <i class="fas fa-info-circle"></i> No se encontraron carreras con los filtros especificados.
                </div>
            }
        </div>
    </div>

    <div class="mt-3">
        <a href="@Url.Action("Lista", "ControladorCarrera")" class="btn btn-outline-primary">
            <i class="fas fa-arrow-left"></i> Volver a Lista de Carreras
        </a>
    </div>
</div>

<style>
    .table thead th {
        vertical-align: middle;
    }

    .btn {
        margin-right: 5px;
        margin-bottom: 5px;
    }
</style>