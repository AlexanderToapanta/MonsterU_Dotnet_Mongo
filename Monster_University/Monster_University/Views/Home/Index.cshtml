@{
    ViewBag.Title = "Index";
    // Obtener el personal desde la sesión
    var personal = Session["Personal"] as CapaModelo.Personal;
    var rol = Session["Rol"] as CapaModelo.Rol;
}

<div class="main-background">
    <div class="background-overlay"></div>

    <div class="dashboard-container">

        <!-- TARJETA DE BIENVENIDA -->
        <div class="card mb-4 shadow-lg bg-white" style="border-radius: 10px;">
            <div class="card-header text-white"
                 style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); font-weight: 600; border-radius: 10px 10px 0 0;">
                Bienvenido al Sistema
            </div>

            <div class="card-body">
                <h2 style="color:#2c3e50;">
                    Hola, @(personal?.nombres ?? "Usuario")
                </h2>

                <p style="color:#7f8c8d;">Bienvenido al Sistema de Gestión de Matrículas Monster</p>

                <div class="user-info mt-3 p-3"
                     style="background:#f8f9fa; border-radius:8px; border-left:4px solid #667eea;">
                    <h4 style="color:#2c3e50;">Información de tu cuenta:</h4>

                    <table class="table table-borderless mt-3">
                        <tbody>
                            <tr>
                                <th scope="row">Código:</th>
                                <td><strong>@(personal?.codigo ?? "N/A")</strong></td>
                            </tr>

                            <tr>
                                <th scope="row">Nombre:</th>
                                <td><strong>@(personal?.nombres ?? "N/A") @(personal?.apellidos ?? "")</strong></td>
                            </tr>

                            <tr>
                                <th scope="row">Usuario:</th>
                                <td><strong>@(personal?.username ?? "N/A")</strong></td>
                            </tr>

                            <tr>
                                <th scope="row">Email:</th>
                                <td><strong>@(personal?.email ?? "N/A")</strong></td>
                            </tr>

                            <tr>
                                <th scope="row">Tipo:</th>
                                <td><strong>@(personal?.peperTipo ?? "N/A")</strong></td>
                            </tr>

                            <tr>
                                <th scope="row">Rol:</th>
                                <td>
                                    <strong>
                                        @(rol?.Nombre ?? (personal?.rol != null ? personal.rol.ToString() : "Sin rol asignado"))
                                    </strong>
                                </td>
                            </tr>

                            <tr>
                                <th scope="row">Estado:</th>
                                <td>
                                    <strong style="color:@((personal?.estado == "ACTIVO") ? "green" : "red")">
                                        @(personal?.estado ?? "N/A")
                                    </strong>
                                </td>
                            </tr>

                            <tr>
                                <th scope="row">Fecha de Ingreso:</th>
                                <td><strong>@(personal?.fecha_ingreso.ToString("dd/MM/yyyy") ?? "N/A")</strong></td>
                            </tr>
                        </tbody>
                    </table>
                </div>

            </div>
        </div>


        <!-- ACCESOS RÁPIDOS -->
        <div class="card mb-4 shadow-lg bg-white" style="border-radius: 10px;">
            <div class="card-header text-white"
                 style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); font-weight: 600; border-radius: 10px 10px 0 0;">
                Accesos Rápidos
            </div>

            <div class="card-body text-center">
                <!-- Cambiar contraseña -->
                @if (personal != null)
                {
                    <a class="quick-action-btn"
                       href="@Url.Action("cambiarcontrasena", "ControladorUsuario")">
                        <i class="bi bi-key"></i> Cambiar Contraseña
                    </a>
                }

                <!-- Mi perfil -->
                @if (personal != null && !string.IsNullOrEmpty(personal.codigo))
                {
                    <a class="quick-action-btn ms-3"
                       href="@Url.Action("Perfil", "ControladorPersonal", new { codigo = personal.codigo })">
                        <i class="bi bi-person-circle"></i> Mi Perfil
                    </a>
                }

                <!-- Administrar personal (si tiene permiso PER) -->
                @{
                    var opcionesPermitidas = Session["OpcionesPermitidas"] as List<string> ?? new List<string>();
                }
                @if (opcionesPermitidas.Contains("PER"))
                {
                    <a class="quick-action-btn ms-3"
                       href="@Url.Action("crearpersonal", "ControladorPersonal")">
                        <i class="bi bi-person-plus"></i> Crear Personal
                    </a>
                }
            </div>
        </div>


        <!-- INFORMACIÓN DEL SISTEMA -->
        <div class="card shadow-lg bg-white" style="border-radius: 10px;">
            <div class="card-header text-white"
                 style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); font-weight: 600; border-radius: 10px 10px 0 0;">
                Información del Sistema
            </div>

            <div class="card-body">
                <div class="accordion" id="accordionInfo">

                    <!-- TAB 1 -->
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="headingOne">
                            <button class="accordion-button collapsed" type="button"
                                    data-bs-toggle="collapse" data-bs-target="#collapseOne">
                                Acerca del Sistema
                            </button>
                        </h2>

                        <div id="collapseOne" class="accordion-collapse collapse">
                            <div class="accordion-body">
                                <p>
                                    <strong>Sistema de Gestión de Matrículas Monster University</strong><br />
                                    Versión: 2.0 (MongoDB)<br />
                                    Desarrollado para gestionar matrículas, estudiantes, docentes y asignaturas.<br />
                                    Base de datos: MongoDB
                                </p>
                            </div>
                        </div>
                    </div>

                    <!-- TAB 2 - Información de la sesión -->
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="headingTwo">
                            <button class="accordion-button collapsed" type="button"
                                    data-bs-toggle="collapse" data-bs-target="#collapseTwo">
                                Información de Sesión
                            </button>
                        </h2>

                        <div id="collapseTwo" class="accordion-collapse collapse">
                            <div class="accordion-body">
                                <table class="table table-sm">
                                    <tbody>
                                        <tr>
                                            <td><strong>Usuario ID:</strong></td>
                                            <td>@(personal?.codigo ?? "N/A")</td>
                                        </tr>
                                        <tr>
                                            <td><strong>Rol ID:</strong></td>
                                            <td>@(rol?.Codigo ?? "N/A")</td>
                                        </tr>
                                        <tr>
                                            <td><strong>Opciones Permitidas:</strong></td>
                                            <td>@(opcionesPermitidas?.Count ?? 0)</td>
                                        </tr>
                                        <tr>
                                            <td><strong>Hora de Conexión:</strong></td>
                                            <td>@DateTime.Now.ToString("HH:mm:ss")</td>
                                        </tr>
                                        <tr>
                                            <td><strong>Fecha Actual:</strong></td>
                                            <td>@DateTime.Now.ToString("dd/MM/yyyy")</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    <!-- TAB 3 - Últimas Actividades -->
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="headingThree">
                            <button class="accordion-button collapsed" type="button"
                                    data-bs-toggle="collapse" data-bs-target="#collapseThree">
                                Últimas Actividades
                            </button>
                        </h2>

                        <div id="collapseThree" class="accordion-collapse collapse">
                            <div class="accordion-body">
                                <div class="activity-list">
                                    <div class="activity-item mb-3 p-2" style="background: #f8f9fa; border-radius: 5px;">
                                        <i class="bi bi-check-circle-fill text-success me-2"></i>
                                        <span>Sesión iniciada: @DateTime.Now.ToString("HH:mm")</span>
                                    </div>
                                    @if (personal != null)
                                    {
                                        <div class="activity-item mb-3 p-2" style="background: #f8f9fa; border-radius: 5px;">
                                            <i class="bi bi-person-fill me-2"></i>
                                            <span>Usuario autenticado: @personal.username</span>
                                        </div>
                                    }
                                    @if (rol != null)
                                    {
                                        <div class="activity-item mb-3 p-2" style="background: #f8f9fa; border-radius: 5px;">
                                            <i class="bi bi-shield-check me-2"></i>
                                            <span>Rol asignado: @rol.Nombre</span>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>


        <!-- FOOTER -->
        <div class="text-center mt-4 p-3"
             style="background: rgba(255,255,255,0.9); border-radius: 10px;">
            <p style="color:#2c3e50; font-weight:600;">
                Monster University - Sistema de Gestión Académica - © @DateTime.Now.Year
            </p>
            <p class="text-muted small">
                Usuario: @(personal?.username ?? "No autenticado") |
                Rol: @(rol?.Nombre ?? "Sin rol") |
                Opciones: @(opcionesPermitidas?.Count ?? 0)
            </p>
        </div>

    </div>

</div>


<style>
    .main-background {
        position: relative;
        min-height: 100vh;
        background-image: url('https://www.bangor.ac.uk/sites/default/files/styles/16x9_1100w/public/2020-05/CB%202018%20May%20%2837%29.jpg?h=41ef3158&itok=zGs3cG5Q');
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
    }

    .background-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.4);
        z-index: 0;
    }

    .dashboard-container {
        position: relative;
        z-index: 1;
        max-width: 1200px;
        margin: 0 auto;
        padding: 40px 20px;
    }

    .quick-action-btn {
        display: inline-block;
        padding: 12px 24px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border-radius: 8px;
        font-weight: 600;
        text-decoration: none;
        transition: 0.3s;
        box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
        margin-bottom: 10px;
    }

        .quick-action-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(102, 126, 234, 0.4);
            color: white;
            text-decoration: none;
        }

    /* Estilos para los iconos de Bootstrap Icons */
    .bi {
        font-size: 1.2rem;
        vertical-align: middle;
    }

    /* Responsive para botones */
    @@media (max-width: 768px) {
        .card-body.text-center .quick-action-btn {
            display: block;
            margin: 10px auto;
            width: 90%;
            max-width: 300px;
        }

            .card-body.text-center .quick-action-btn.ms-3 {
                margin-left: 0 !important;
            }
    }
</style>

<!-- Agregar Bootstrap Icons CDN -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">